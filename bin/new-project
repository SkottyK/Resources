#!/bin/bash
#
# Creates new projects for projects with different languages.
#

USAGE="new_project language project_name";

if [[ $# < 2 ]];
then
    echo $USAGE;
    exit -1;
fi

case $1 in
rust)
    cargo new $2 --bin;
    ;;
*)
    echo "$1 is not currently supported by new_project";
    exit -2;
    ;;
esac

exit 0;

